<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value="do" />
	<constant name="struts.custom.i18n.resources" value="global"></constant>


	<package name="basic" namespace="/" extends="struts-default">

		<action name="homeAction" class="ar.com.vga.action.HomeAction">
			<result name="success">pages/index.jsp</result>
		</action>

		<action name="blogAction" method="prepareShow" class="ar.com.vga.action.BlogAction">
			<result name="success">pages/blog.jsp</result>
		</action>

		<action name="contactAction" class="ar.com.vga.action.ContactAction">
			<result name="success">pages/contact.jsp</result>
		</action>

		<action name="galleryAction" class="ar.com.vga.action.GalleryAction">
			<result name="success">pages/gallery.jsp</result>
		</action>

		<action name="singleAction" method="prepareShow" class="ar.com.vga.action.SingleAction">
			<result name="success">pages/single.jsp</result>
		</action>
		
		<action name="adminAction" method="admin" class="ar.com.vga.action.AdminAction">
			<result name="createEdit">pages/adminSingle.jsp</result> 
			<interceptor-ref name="defaultStack">
                <param name="maximumSize">10485760</param>
                <param name="allowedTypes">image/jpeg,image/png,image/gif,image/pjpeg</param>
            </interceptor-ref>
		</action>

		<action name="saveAction" method="save" class="ar.com.vga.action.SingleAction">
			<result name="createEdit">pages/single.jsp</result>
		</action>

		
		<action name="uploadFilesAdminAction" method="uploadFiles" class="ar.com.vga.action.AdminAction">
			<result name="success">pages/adminSingle.jsp</result> 
			<interceptor-ref name="defaultStack">
                <param name="maximumSize">10485760</param>
                <param name="allowedTypes">image/jpeg,image/png,image/gif,image/pjpeg</param>
            </interceptor-ref>
		</action>
		
	</package>

</struts>